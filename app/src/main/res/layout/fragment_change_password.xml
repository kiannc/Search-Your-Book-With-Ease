<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kianncs.softwareengineering_libraryapp.Fragments.ChangePasswordFragments">

    <include layout="@layout/app_bar_drawer"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="43dp"
            android:textColor="#ffff"
            android:text="Old Password"
            android:layout_marginTop="130dp"
            />

        <EditText
            android:id="@+id/etOldPasswordChangePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/textViewOldPassword"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/textViewNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="43dp"
            android:textColor="#ffff"
            android:text="New Password"
            android:layout_below="@+id/etOldPasswordChangePassword"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etNewPasswordChangePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textViewNewPassword"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:imeOptions="actionNext"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/textViewCfmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="43dp"
            android:textColor="#ffff"
            android:text="Confirm New Password"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/etNewPasswordChangePassword"/>

        <EditText
            android:id="@+id/etcfmNewPasswordChangePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textViewCfmNewPassword"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            />

        <Button
            android:id="@+id/bChangeNewPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etcfmNewPasswordChangePassword"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:onClick="onClick"
            android:text="Enter"/>





    </RelativeLayout>

</RelativeLayout>
